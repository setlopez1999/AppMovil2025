<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nombre_paciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Pérez González"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#333"/>

            <TextView
                android:id="@+id/servicio_de_la_cita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpieza dental"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/hora_de_la_cita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoy 10:30 AM"
                android:textSize="12sp"
                android:textColor="#3b4a8c"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/estado_cita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirmada"
                android:background="@drawable/status_confirmed_bg"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
