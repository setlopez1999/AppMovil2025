<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/usuario_nombre"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="María González"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#333"/>

            <TextView
                android:id="@+id/estrellas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★★"
                android:textSize="14sp"
                android:textColor="#ff6b35"/>
        </LinearLayout>

        <TextView
            android:id="@+id/contenido_resena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excelente atención, muy profesional y explicó todo el procedimiento detalladamente. Lo recomiendo ampliamente."
            android:textSize="13sp"
            android:textColor="#666"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/fecha_publicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hace 2 días"
            android:textSize="11sp"
            android:textColor="#999"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
